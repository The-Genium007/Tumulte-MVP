{
  "name": "backend",
  "version": "0.6.2",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node --loader ts-node-maintained/esm/transpile-only bin/server.ts",
    "dev": "node --loader ts-node-maintained/esm --watch bin/server.ts",
    "test": "node --loader ts-node-maintained/esm bin/test.ts",
    "test:unit": "node --loader ts-node-maintained/esm bin/test.ts --suite=unit",
    "test:functional": "node --loader ts-node-maintained/esm bin/test.ts --suite=functional",
    "test:e2e": "node --loader ts-node-maintained/esm bin/test.ts --suite=e2e",
    "test:coverage": "c8 node --loader ts-node-maintained/esm bin/test.ts",
    "test:watch": "node --loader ts-node-maintained/esm --watch bin/test.ts",
    "test:setup": "./scripts/test-setup.sh start",
    "test:teardown": "./scripts/test-setup.sh stop",
    "test:clean": "./scripts/test-setup.sh clean",
    "test:all": "./scripts/test-setup.sh run",
    "test:report": "./scripts/test-report.sh",
    "coverage:check": "./scripts/check-coverage.sh",
    "coverage:check:prod": "./scripts/check-coverage.sh 85",
    "test:sentry": "node --loader ts-node-maintained/esm scripts/test-sentry.ts",
    "--- GAMIFICATION SIMULATION ---": "echo 'Simuler des redemptions Channel Points Twitch en dev/staging'",
    "gamification:simulate": "node --loader ts-node-maintained/esm bin/console.ts gamification:simulate",
    "gamification:simulate:fast": "node --loader ts-node-maintained/esm bin/console.ts gamification:simulate --fast --fill --reset-cooldown",
    "gamification:simulate:eventsub": "../scripts/simulate-twitch-eventsub.sh",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "build": "node ace build",
    "build:docker": "tsc -p tsconfig.build.json && cp adonisrc.js build/adonisrc.js && cp package*.json build/ && cp -r database build/ && cp -r resources build/"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#repositories/*": "./app/repositories/*.js",
    "#dtos/*": "./app/dtos/*.js",
    "#validators/*": "./app/validators/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#utils/*": "./app/utils/*.js",
    "#constants/*": "./app/constants/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.0",
    "@faker-js/faker": "^10.1.0",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.5.0",
    "@swc/core": "^1.15.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/web-push": "^3.6.4",
    "c8": "^10.1.3",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node-maintained": "^10.9.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@adonisjs/ally": "^5.1.1",
    "@adonisjs/auth": "^9.4.0",
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.6.1",
    "@adonisjs/mail": "^9.2.2",
    "@adonisjs/redis": "^9.1.0",
    "@adonisjs/session": "^7.6.0",
    "@adonisjs/transmit": "^2.0.2",
    "@sentry/node": "^10.33.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/socket.io": "^3.0.1",
    "@types/tmi.js": "^1.8.6",
    "@vinejs/vine": "^4.2.0",
    "jsonwebtoken": "^9.0.3",
    "luxon": "^3.7.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "pino": "^10.2.1",
    "prom-client": "^15.1.3",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.8.0",
    "socket.io": "^4.8.3",
    "tmi.js": "^1.8.5",
    "web-push": "^3.6.7",
    "zod": "^4.3.5"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
