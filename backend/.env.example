TZ=UTC
PORT=3334
HOST=0.0.0.0
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development

# Docker/Dokploy Environment Suffix
# Used to differentiate containers in the same cluster
# Values: "prod" (default) or "staging"
# Container names will be: tumulte-backend-{ENV_SUFFIX}
ENV_SUFFIX=prod

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=twitch_polls

# Redis
REDIS_CONNECTION=main
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Sentry
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
APP_VERSION=0.3.0

# Session
SESSION_DRIVER=redis
DB_POOL_MIN=2
DB_POOL_MAX=20

# Twitch OAuth
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URI=http://localhost:3333/auth/twitch/callback

# Frontend URL (pour CORS)
FRONTEND_URL=http://localhost:3000

# Discord (2 webhooks séparés)
DISCORD_SUPPORT_WEBHOOK_URL=https://discord.com/api/webhooks/xxx  # Bugs
DISCORD_SUGGESTIONS_WEBHOOK_URL=https://discord.com/api/webhooks/xxx  # Suggestions

# GitHub (pour issues suggestions)
GITHUB_TOKEN=ghp_xxx
GITHUB_REPO=The-Genium007/Tumulte
GITHUB_DISCUSSION_CATEGORY_ID=DIC_xxx  # ID de la catégorie "Idées & Suggestions"

# Push Notifications (VAPID)
# Générer avec: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:contact@tumulte.app

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3333/auth/google/callback

# Mail (Resend - https://resend.com)
RESEND_API_KEY=re_fake_key_for_dev
MAIL_FROM_ADDRESS=noreply@tumulte.app
MAIL_FROM_NAME=Tumulte

# Administrators (comma-separated emails)
ADMIN_EMAILS=votre.email@example.com,autre.admin@example.com

# PostHog Analytics (EU - RGPD compliant)
# Obtenir la clé depuis: https://eu.posthog.com/project/settings
NUXT_PUBLIC_POSTHOG_KEY=phc_VOTRE_VRAIE_CLE_ICI
NUXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# Google Tag Manager
# Obtenir l'ID depuis: https://tagmanager.google.com/
NUXT_PUBLIC_GTM_ID=GTM-VOTRE_ID_ICI

# Twitch EventSub (signature HMAC des webhooks)
# Secret partagé pour vérifier les signatures des notifications EventSub
# En dev: n'importe quelle valeur (ex: "dev-test-secret")
# En prod: un secret fort généré aléatoirement
TWITCH_EVENTSUB_SECRET=dev-test-secret