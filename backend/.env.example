TZ=UTC
PORT=3334
HOST=0.0.0.0
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development

# Docker/Dokploy Environment Suffix
# Used to differentiate containers in the same cluster
# Values: "prod" (default) or "staging"
# Container names will be: tumulte-backend-{ENV_SUFFIX}
ENV_SUFFIX=prod

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=twitch_polls

# Redis
REDIS_CONNECTION=main
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Sentry
SENTRY_DSN=

# Session
SESSION_DRIVER=cookie

# Twitch OAuth
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URI=http://localhost:3333/auth/twitch/callback

# Frontend URL (pour CORS)
FRONTEND_URL=http://localhost:3000

# Discord Support / Tickets
DISCORD_SUPPORT_WEBHOOK_URL=
DISCORD_SUPPORT_ROLE_ID=

# Push Notifications (VAPID)
# Générer avec: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:contact@tumulte.app
